<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TucuGo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/gradient_start</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color - Usando el azul del logo -->
        <item name="android:statusBarColor" tools:targetApi="21">@color/gradient_start</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>

        <!-- Customize your theme here. -->
    </style>
</resources>
